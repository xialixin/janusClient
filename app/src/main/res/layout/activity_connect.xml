            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/thumbnail_voice_ptt"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:padding="5dp"
                android:layout_alignParentStart="true"
                android:scaleType="centerCrop"
                android:clickable="true"
                android:src="@drawable/voice" />
        <TextView
            android:id="@+id/info_text_voice_ptt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/thumbnail_voice_ptt"
            android:padding="8dp"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textSize="18dp"
            android:text="@string/voice_ptt" />

        <TextView
            android:id="@+id/info_text_voice_ptt_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/info_text_voice_ptt"
            android:layout_toRightOf="@id/thumbnail_voice_ptt"
            android:padding="2dp"
            android:textColor="#f0f0f0"
            android:textSize="12dp"
            android:text="@string/voice_ptt_desc" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
